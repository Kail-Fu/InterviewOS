# App
APP_NAME=InterviewOS API
APP_ENV=dev
APP_BASE_URL=http://localhost:8000
CORS_ORIGINS=["*"]

# Out-of-box providers (no cloud account required)
EMAIL_PROVIDER=console
STORAGE_PROVIDER=local
EMAIL_FROM=assessment@example.com
LOCAL_ASSETS_DIR=assets
LOCAL_ASSESSMENT_FILENAME=example_assessment.zip

# Assessment behavior
ASSESSMENT_BUCKET=online-assessments
ASSESSMENT_OBJECT_KEY=assessment.zip
PRESIGNED_URL_EXPIRATION_SECONDS=3600
REMINDER_DELAY_SECONDS=2700

# SMTP (optional, only used when EMAIL_PROVIDER=smtp)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=false
SMTP_USE_SSL=false

# AWS (optional, only used for EMAIL_PROVIDER=aws_ses or STORAGE_PROVIDER=s3)
AWS_REGION=us-east-1
SES_FROM_EMAIL=
